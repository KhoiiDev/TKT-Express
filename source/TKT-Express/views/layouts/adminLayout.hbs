    <script>
        window.onload = function () {
            const images = document.getElementsByTagName('img');
            for (let i = 0; i < images.length; i++) {
                if (!images[i].complete) {
                    location.reload(true);
                    break;
                }
            }
        };
    </script>

    <script>
        function setSerial() {
            $('tbody tr').each(function (index) {
                $(this).find('td:first').html(index);
            });
        }
    </script>

    <script>
        // Lấy tất cả các phần tử <td> có thuộc tính rowspan
        var tdList = document.querySelectorAll('td[rowspan]');

        // Duyệt qua từng phần tử và cộng thêm 1 vào giá trị rowspan
        tdList.forEach(function (td) {
            var rowspan = parseInt(td.getAttribute('rowspan'));
            td.setAttribute('rowspan', rowspan + 1);
        });
    </script>

    <script>
        // function hiển thị flash message bên góc phải màn hình.

        function flashMessage(type, message) {
            const html = `
            <div class="flash-message bs-toast bg-${type.toLowerCase()} top-0 end-0 toast toast-placement-ex m-2 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <i class="bx bx-bell me-2"></i>
                    <div class="me-auto fw-semibold">${type}</div>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">${message}</div>
            </div>`;
            $('body').append(html);
            $('.flash-message').fadeOut(2000);
        }
    </script>
