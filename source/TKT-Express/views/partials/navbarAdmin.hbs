<script>

    function setSerial() {
        $('tbody tr').each(function (index) {
            $(this).find('td:first').html(index);
        });
    }
    // Find data with another page.
    function SearchData() {
        const dataInput = $('#searchDataID').val().toLowerCase().trim();

        $('tbody tr').each(function () {
            // Lấy hàng hiện tại
            var rowID = $(this).attr('id');
            var cells = $(this).find('td');
            $('#' + rowID).hide(); // Ẩn hàng bằng cách sử dụng ID

            // Duyệt qua từng ô trong hàng
            cells.each(function () {
                // Lấy nội dung của ô
                var checkData = $(this).text().toLowerCase().trim().search(dataInput);
                if (checkData >= 0) {
                    $('#' + rowID).show(); // Hiển thị hàng bằng cách sử dụng ID
                    return false; // Thoát khỏi vòng lặp cells.each()
                }
                // Thực hiện hành động mong muốn với nội dung của ô
            });
        });
        setSerial();
    }
</script>

