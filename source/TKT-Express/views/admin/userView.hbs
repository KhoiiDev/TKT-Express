<title>User</title>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">User Management</h4>

    <div class="card">
        <div class="card-body">
            <!-- Modal add new-->
            <form id="modalFormAdd" enctype="multipart/form-data" method="post">
                <div class="modal fade" id="modalAdd" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Add User</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col mb-3">
                                        <label class="form-label" for="username">Username</label>
                                        <input type="text" class="form-control" id="username" placeholder="Name"
                                            name="username" />
                                    </div>
                                    <p id="errorName" class="text-danger"></p>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <label class="form-label" for="password">Password</label>
                                        <input type="password" class="form-control" id="password" placeholder="Name"
                                            name="password" />
                                    </div>
                                    <p id="errorPass" class="text-danger"></p>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <label class="form-label" for="CfPassword">Confirm Password</label>
                                        <input type="password" class="form-control" id="CfPassword" placeholder="Name"
                                            name="CfPassword" />
                                    </div>
                                    <p id="errorCfpass" class="text-danger"></p>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <label for="role" class="form-label">Default select</label>
                                        <select id="role" class="form-select" name="role">
                                            <option>Default select</option>
                                            <option value="User">User</option>
                                            <option value="Employee">Employee</option>
                                            <option value="Admin">Admin</option>
                                        </select>
                                    </div>
                                    <p id="errorRole" class="text-danger"></p>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label for="imageInput" class="form-label">Image</label>
                                        <input type="file" ref="file" class="form-control" id="imageInput"
                                            name="imageInput" />
                                    </div>
                                    <div class="col-sm-2">
                                        <img id="imagePreview" src="#" alt="Preview"
                                            style="display: none; max-width: 200px; max-height: 200px;" />
                                    </div>
                                    <p id="errorImage" class="text-danger"></p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                    Close
                                </button>
                                <button class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <form id="modalFormEdit" enctype="multipart/form-data" method="post">
                <div class="modal fade" id="modalEdit" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Edit User</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col mb-3">
                                        <h5 id="showUsername"></h5>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <label for="role" class="form-label">Role</label>
                                        <select id="role" class="form-select" name="role">
                                            <option>Default select</option>
                                            <option value="User">User</option>
                                            <option value="Employee">Employee</option>
                                            <option value="Admin">Admin</option>
                                        </select>
                                    </div>
                                    <p id="errorRole" class="text-danger"></p>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label for="imageEditInput" class="form-label">Image</label>
                                        <input type="file" ref="file" class="form-control" id="imageEditInput"
                                            name="imageEditInput" />
                                    </div>
                                    <div class="col-sm-2">
                                        <img id="imagePreviewEdit" src="#" alt="Preview"
                                            style="display: none; max-width: 200px; max-height: 200px;" />
                                    </div>
                                    <p id="errorImage" class="text-danger"></p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                    Close
                                </button>
                                <button class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Modal delete confirm an Brand -->
            <div class="modal fade" id="modalDelete" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">Delete Confirmation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <h5 class="text-muted fw-light">Are you sure you want to delete
                                <b id="NameDelete"></b>
                            </h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                            <button type="button" class="btn btn-primary delete-button" id="confirm-delete">Yes</button>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Body --}}
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered" id="myTable">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Username</th>
                                <th>Image</th>
                                <th>Role</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each data}}
                            <tr id="trow_{{this._id}}">
                                <td>{{@index}}</td>
                                <td>
                                    <div class="overflow-hidden" style="max-width: 250px;">
                                        <strong>{{this.username}}</strong>
                                    </div>
                                </td>
                                <td>
                                    <img id="img_{{this._id}}" src="{{this.profilePhoto}}" alt="" height="50">
                                </td>

                                <td>
                                    {{this.role}}
                                </td>
                                <td class="text-center">
                                    <button type="submit" class="btn btn-link" data-bs-toggle="modal"
                                        data-bs-target="#modalEdit_{{this._id}}">
                                        <i class='bx bxs-face-mask' style='color:#33CCFF'></i>
                                    </button>
                                    <div class="modal fade" id="modalEdit_{{this._id}}" tabindex="-1"
                                        aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h2 class="modal-title" id="modalCenterTitle">DETAIL</h2>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>{{this.username}}</h4>
                                                    <img src="{{this.profilePhoto}}" alt="Picture" height="150"
                                                        class="pb-4">
                                                    <h6 class="text-primary">Role:</h6>
                                                    <p>{{this.role}}</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-link edit-button" data-bs-target="#modalEdit"
                                        data-bs-toggle="modal"
                                        onclick="editData('{{this.username}}', '{{this.role}}', '{{this.profilePhoto}}' , '{{this._id}}')">
                                        <i class='bx bx-pencil' style='color:#FFCC33'></i>
                                    </button>
                                    <button type="button" class="btn btn-link" data-bs-toggle="modal"
                                        data-bs-target="#modalDelete"
                                        onclick="deleteData('{{this.username}}','{{this._id}}')">
                                        <i class='bx bx-trash-alt' style='color:#ff0000'></i>
                                    </button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="btn-group back-to-top" style="display: inline;">
                <button type="button" class="btn btn-success btn-icon rounded-pill dropdown-toggle hide-arrow"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    <i class='bx bx-brightness'></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end p-1">
                    <li class="p-1">
                        <button onclick="AddNew()" class="btn btn-info btn-icon rounded-pill" data-bs-toggle="modal"
                            data-bs-target="#modalAdd">
                            <i class='bx bx-plus-medical'></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    $('#userID').addClass('active bx-flashing bx-rotate-0');
</script>

<script src="/Admin/action/userAction.js"></script>